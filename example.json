    "ssh_wait_timeout": "10000s",
    "shutdown_command": "sudo shutdown -P now",
    "http_directory": "unattended"
  }
],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sleep 30",
      "sudo apt-get update",
      "sudo apt-get install -y redis-server"
    ]
  }]
}